{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "description": "website-review-mcp - Claude Code configuration",
  "includeCoAuthoredBy": true,
  "model": "claude-sonnet-4-5-20250929",
  "permissions": {
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./.azure/**)",
      "Read(./.aws/**)",
      "Read(./.ssh/**)",
      "Read(**/*secret*)",
      "Read(**/*password*)",
      "Read(**/*private*key*)",
      "Bash(rm -rf /:*)",
      "Bash(rm -rf /*:*)",
      "Bash(sudo:*)",
      "Bash(su:*)",
      "Bash(chmod 777:*)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(git reset --hard:*)",
      "Bash(git clean -fd:*)"
    ],
    "allow": [
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git show:*)",
      "Bash(git branch:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Read(src/**)",
      "Read(docs/**)",
      "Edit(src/**)",
      "Edit(docs/**)",
      "Write(src/**)",
      "Write(docs/**)"
    ],
    "ask": [
      "Bash(git push:*)",
      "Bash(git pull:*)",
      "Bash(rm:*)",
      "Bash(mv:*)"
    ]
  },
  "env": {},
  "defaultMode": "default"
}
